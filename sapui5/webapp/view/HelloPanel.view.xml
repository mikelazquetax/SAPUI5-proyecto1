<mvc:View xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc"
displayBlock="true" controllerName="com.mazquetax.sapui5.controller.HelloPanel"
xmlns:core="sap.ui.core"
>

 <Panel id="panel" headerText="{18n>appTitle}" class="sapUiResponsiveMargin centerdiv" width="auto">
<content>
<Button icon="sap-icon://action" id="btnDialog" text="{i18n>showHelloDialog}" press="abreDialogo" class="sapUiSmallMarginEnd"></Button>
<Button icon="sap-icon://hello-world" id="btnSaludo" text="{i18n>showHelloButtonText}" press="muestraUnHolita" class="sapUiSmallMarginEnd"></Button>
<Input id="nombre" value="{/recipient/name}"   width="20%"></Input>
<Text id="saludoTexto" text="Hello {/recipient/name}" class="sapUiSmallMargin bold"></Text>
</content>
</Panel>
<core:Fragment fragmentName="com.mazquetax.sapui5.view.Form01" type="XML" />
</mvc:View>

